#!/bin/sh

set -u
set -e

SRCDIR=@CMAKE_SOURCE_DIR@

SUFFIX=
LAUNCHER=$SRCDIR/release/JavaAppLauncher/JavaAppLauncher
if [ $# -gt 0 ]; then
	if [ "$1" = "compat" ]; then
		SUFFIX=-AppleJava
		LAUNCHER=/System/Library/Frameworks/JavaVM.framework/Versions/Current/Resources/MacOS/JavaApplicationStub
	fi
fi

umask 022
APP="@CMAKE_PROJECT_NAME@ Viewer$SUFFIX.app"

if [ -d "$APP" ]; then
	rm -rf "$APP"
fi

mkdir -p "$APP/Contents/MacOS"
mkdir -p "$APP/Contents/Resources/Java"
mkdir -p "$APP/Contents/Resources/TurboJPEG"

install -m 644 pkgscripts/Info$SUFFIX.plist "$APP/Contents/Info.plist"
if [ "$SUFFIX" = "-AppleJava" ]; then
  install -m 755 $LAUNCHER "$APP/Contents/MacOS/"
else
  install -m 755 $LAUNCHER "$APP/Contents/MacOS/@CMAKE_PROJECT_NAME@ Viewer"
fi
echo "APPL????" >"$APP/Contents/PkgInfo"
install -m 644 java/VncViewer.jar "$APP/Contents/Resources/Java/"
install -m 644 $SRCDIR/java/com/turbovnc/vncviewer/README.txt "$APP/Contents/Resources/Java/"
install -m 644 $SRCDIR/LICENSE.txt "$APP/Contents/Resources/Java/"
install -m 644 $SRCDIR/release/turbovnc.icns "$APP/Contents/Resources/"
install -m 644 $SRCDIR/release/vncviewer.icns "$APP/Contents/Resources/"
install -m 755 @TJPEG_JNILIBRARY@ "$APP/Contents/Resources/TurboJPEG/"

exit
